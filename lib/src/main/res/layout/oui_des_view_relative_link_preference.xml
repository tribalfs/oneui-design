<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/oui_des_relative_link_gap_height"
    android:orientation="vertical"
    android:background="?roundedCornerColor"
    tools:viewBindingIgnore="true">

    <View
        android:id="@+id/link_divider"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/oui_des_relative_link_view_margin_top_bottom"
        android:paddingEnd="@dimen/oui_des_relative_link_view_margin_start_end"
        android:paddingBottom="@dimen/oui_des_relative_link_view_margin_top_bottom"
        android:orientation="vertical"
        android:background="@drawable/oui_des_relative_links_card_bg"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/link_title"
            style="@style/OneUI.RelativeLinkTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/oui_des_relative_link_title_text_margin_bottom"
            android:paddingStart="@dimen/oui_des_relative_link_view_margin_start_end"
            android:text="@string/oui_des_relative_description"/>

        <LinearLayout
            android:id="@+id/link_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/oui_des_relative_link_text_margin_start"
            android:orientation="vertical" />

    </LinearLayout>
</LinearLayout>